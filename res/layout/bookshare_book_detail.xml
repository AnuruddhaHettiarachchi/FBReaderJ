<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:orientation="vertical"
	android:id="@+id/book_detail_view"
	android:background="#000000">
		<TextView
			android:background="#4A4A4A"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:text="Book Details"
			android:textColor="#ffffff"
			android:textStyle="bold"
			android:textSize="20dip"/>
	 	<ScrollView
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="40dip"
			android:layout_marginBottom="60dip">
				<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
					android:layout_width="fill_parent"
					android:layout_height="fill_parent"
					android:stretchColumns="1">
					<TableRow>
							<TextView
								android:id="@+id/bookshare_book_detail_title"
								android:text="Title: "
								android:textStyle="bold"
								android:textColor="#ffffff"
								android:textSize="16dip"
								android:typeface="serif"
								android:paddingBottom="3dip"
								android:gravity="left"/>
					 		<TextView
								android:id="@+id/bookshare_book_detail_title_text"
								android:textColor="#ffffff"
								android:width="0dip"
								android:paddingRight="2dip"
								android:textSize="16dip"
								android:typeface="serif"
								android:layout_marginBottom="10dip"
								android:gravity="left"/>
					</TableRow>
					<TableRow>
							<TextView
								android:id="@+id/bookshare_book_detail_authors"
								android:text="Author(s): "
								android:textStyle="bold"
								android:textColor="#ffffff"
								android:textSize="16dip"
								android:typeface="serif"
								android:paddingBottom="3dip"
								android:gravity="left"/>
							<TextView
								android:id="@+id/bookshare_book_detail_authors_text"
								android:textColor="#ffffff"
								android:width="0dip"
								android:textSize="16dip"
								android:typeface="serif"
								android:paddingRight="2dip"
								android:paddingBottom="3dip"
								android:layout_marginBottom="10dip"
								android:gravity="left"/>
					</TableRow>				
					<View
	        			android:layout_height="1dip"
	        			android:background="#ffffff"
	        			android:layout_marginTop="5dip"
	        			android:layout_marginBottom="10dip"/>
	        		<TableRow>
						<Button
							android:id="@+id/bookshare_btn_download"
							android:layout_width="fill_parent"
							android:layout_height="wrap_content"
							android:layout_marginLeft="20dip"
							android:layout_marginRight="20dip"
							android:text="Download"
							android:textStyle="bold"
							android:layout_span="2"
							android:gravity="center"/>					    					
					</TableRow>
					<TableRow>
						<TextView 
		                    android:id="@+id/bookshare_download_not_available_msg"
							android:layout_width="fill_parent"
							android:layout_height="wrap_content"
							android:text="You must sign in to Bookshare to download."
		                    android:gravity="left"
		                    android:textColor="#ffffff"
							android:textStyle="bold"
							android:textSize="16dip"
							android:typeface="serif"
							android:paddingBottom="3dip"
							android:layout_span="2"/>
					</TableRow>
					<View
	        			android:layout_height="1dip"
	        			android:background="#ffffff"
	        			android:layout_marginTop="5dip"
	        			android:layout_marginBottom="10dip"/>
					
					<TableRow>
							<TextView
								android:id="@+id/bookshare_book_detail_isbn"
								android:text="ISBN: "
								android:textColor="#ffffff"
								android:textStyle="bold"
								android:textSize="16dip"
								android:typeface="serif"
								android:paddingBottom="3dip"
								android:gravity="left"/>
							<TextView
								android:id="@+id/bookshare_book_detail_isbn_text"
								android:textColor="#ffffff"
								android:width="0dip"
								android:textSize="16dip"
								android:typeface="serif"
								android:paddingRight="2dip"
								android:paddingBottom="3dip"
								android:layout_marginBottom="10dip"
								android:gravity="left"/>
					</TableRow>
					<TableRow>
							<TextView
								android:id="@+id/bookshare_book_detail_language"
								android:text="Language:  "
								android:textColor="#ffffff"
								android:textStyle="bold"
								android:textSize="16dip"
								android:typeface="serif"
								android:paddingBottom="3dip"
								android:gravity="left"/>
							<TextView
								android:id="@+id/bookshare_book_detail_language_text"
								android:textColor="#ffffff"
								android:width="0dip"
								android:textSize="16dip"
								android:typeface="serif"
								android:paddingRight="2dip"
								android:paddingBottom="3dip"
								android:layout_marginBottom="10dip"
								android:gravity="left"/>
					</TableRow>
					<TableRow>
							<TextView
								android:id="@+id/bookshare_book_detail_category"
								android:text="Category: "
								android:textColor="#ffffff"
								android:textSize="16dip"
								android:typeface="serif"
								android:paddingBottom="3dip"
								android:textStyle="bold"
								android:gravity="left"/>
							<TextView
								android:id="@+id/bookshare_book_detail_category_text"
								android:textColor="#ffffff"
								android:width="0dip"
								android:textSize="16dip"
								android:typeface="serif"
								android:paddingRight="2dip"
								android:paddingBottom="3dip"
								android:layout_marginBottom="10dip"
								android:gravity="left"/>
					</TableRow>
					<TableRow>
							<TextView
								android:id="@+id/bookshare_book_detail_publish_date"
								android:text="@string/bookshare_book_detail_publish_date"
								android:textColor="#ffffff"
								android:textSize="16dip"
								android:typeface="serif"
								android:paddingBottom="3dip"
								android:textStyle="bold"
								android:gravity="left"/>
							<TextView
								android:id="@+id/bookshare_book_detail_publish_date_text"
								android:textColor="#ffffff"
								android:width="0dip"
								android:textSize="16dip"
								android:typeface="serif"
								android:paddingRight="2dip"
								android:paddingBottom="3dip"
								android:layout_marginBottom="10dip"
								android:gravity="left"/>
					</TableRow>
					<TableRow>
							<TextView
								android:id="@+id/bookshare_book_detail_publisher"
								android:text="Publisher: "
								android:textColor="#ffffff"
								android:textSize="16dip"
								android:typeface="serif"
								android:textStyle="bold"
								android:paddingBottom="3dip"
								android:gravity="left"/>
							<TextView
								android:id="@+id/bookshare_book_detail_publisher_text"
								android:textColor="#ffffff"
								android:width="0dip"
								android:textSize="16dip"
								android:typeface="serif"
								android:paddingRight="2dip"
								android:paddingBottom="3dip"
								android:layout_marginBottom="10dip"
								android:gravity="left"/>
					</TableRow>
					<TableRow>
							<TextView
								android:id="@+id/bookshare_book_detail_copyright"
								android:text="Copyright:"
								android:textColor="#ffffff"
								android:textSize="16dip"
								android:typeface="serif"
								android:paddingBottom="3dip"
								android:textStyle="bold"
								android:gravity="left"/>
							<TextView
								android:id="@+id/bookshare_book_detail_copyright_text"
								android:textColor="#ffffff"
								android:paddingBottom="3dip"
								android:textSize="16dip"
								android:typeface="serif"
								android:layout_marginBottom="10dip"
								android:gravity="left"/>
					</TableRow>
					<TableRow>
						<TextView
								android:id="@+id/bookshare_book_detail_synopsis"
								android:text="Synopsis"
								android:textColor="#ffffff"
								android:textStyle="bold"
								android:textSize="15dip"
								android:background="#4A4A4A"
								android:paddingTop="3dip"
								android:paddingBottom="3dip"
								android:layout_marginBottom="5dip"
								android:layout_span="2"/>
					</TableRow>
					<TableRow>
						<TextView
								android:id="@+id/bookshare_book_detail_synopsis_text"
								android:textColor="#ffffff"
								android:layout_span="2"
								android:textSize="16dip"
								android:typeface="sans"
								android:paddingTop="3dip"
								android:paddingBottom="3dip"
								android:layout_marginBottom="5dip"
								android:singleLine="false"/>
					</TableRow>
				</TableLayout>
		</ScrollView>

</RelativeLayout>