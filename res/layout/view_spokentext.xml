<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <LinearLayout
        android:focusable="false"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal">
  

     <ImageButton android:id="@+id/spokentextpause"
            android:layout_width="70dip"
            android:layout_height="50dip"
            android:src="@drawable/speak_play"
            android:focusable="true"
            android:nextFocusRight="@+id/spokentextback"
            android:nextFocusLeft="@+id/spokentextforward"
            android:contentDescription="@string/play"
            />

     <ImageButton android:id="@+id/spokentextback"
            android:layout_width="70dip"
            android:layout_height="50dip"
            android:src="@drawable/speak_previous"
            android:nextFocusRight="@+id/spokentextforward"
            android:nextFocusLeft="@+id/spokentextpause"
            android:contentDescription="@string/previous"
            />

    <ImageButton android:id="@+id/spokentextforward"
            android:layout_width="70dip"
            android:layout_height="50dip"
            android:src="@drawable/speak_next"
            android:nextFocusRight="@+id/spokentextcontents"
            android:nextFocusLeft="@+id/spokentextback"
            android:contentDescription="@string/next"
            />

    <Button android:id="@+id/spokentextcontents"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:nextFocusRight="@+id/spokentextpause"
            android:nextFocusLeft="@+id/spokentextforward"
            android:contentDescription="table of contents"
            android:text="Table of Contents"
    />
